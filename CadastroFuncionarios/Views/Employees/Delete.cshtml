@model CadastroFuncionarios.Models.Employee

@{
    ViewData["Title"] = "Funcionários - Excluir";
}

<h1>Excluir</h1>

<h4>Funcionário</h4>

<hr />
<div>
    <h5>Tem certeza de que deseja excluir isso?</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmpCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmpCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OfficeLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OfficeLocation)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EmployeeId" />
        <a asp-action="Index" class="btn btn-secondary col-sm-2 mb-3">
            <i class="fa fa-arrow-left mr-3" aria-hidden="true"></i>
            Voltar a Lista
        </a>
        <input type="submit" value="Excluir" class="btn btn-danger col-sm-2 mb-3">
    </form>
</div>
