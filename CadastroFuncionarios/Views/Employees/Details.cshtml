@model CadastroFuncionarios.Models.Employee

@{
    ViewData["Title"] = "Funcionários - Detalhes";
}

<h1>
    Detalhes
</h1>
<h4>Funcionário</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EmpCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EmpCode)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OfficeLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OfficeLocation)
        </dd>
    </dl>
</div>

<div class="form-group p-2">
    <a asp-action="Index" class="btn btn-secondary col-sm-2 mb-3">
        <i class="fa fa-arrow-left mr-3" aria-hidden="true"></i>
        Voltar a Lista
    </a>
    <a asp-action="Edit" asp-route-id="@Model?.EmployeeId" class="btn btn-primary col-sm-2 mb-3">
        Editar
    </a>
</div>